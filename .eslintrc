{
  "env": {
  	"browser": true,
    "node": true,
    "es6": true,
    "jquery": true,
    "jest": true,
  },
  "extends": "airbnb-base",
  "rules": {
    "no-param-reassign": [2, { "props": false }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-underscore-dangle": "off",
    "max-len": ["error", {"comments": 200, "code": 120, "ignoreUrls":true, "ignoreStrings": true}],
    "arrow-body-style": ["error", "as-needed"],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["webpack/**.js", "test/**/**.js", "migrations/**/**.js", "build_scripts/**/**.js"]}]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "globals": {
    "DOMPurify": true,
    "expect": true,
    "jest": true,
    "it": true,
    "describe": true,
    "ALGOLIASEARCH_APPLICATION_ID": true,
    "ALGOLIASEARCH_API_KEY_SEARCH": true,
    "FIREBASE_PUBLIC_CONFIG": true,
    "SENTRY_DSN_FRONTEND": true,
    "SENTRY_DSN_BACKEND": true,
    "NODE_ENV": true,
    "__appRootPath": true
  }
}
